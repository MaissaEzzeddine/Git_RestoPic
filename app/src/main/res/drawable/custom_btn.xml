<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="@dimen/_3sdp"
            android:insetTop="@dimen/_8sdp"
            android:insetRight="@dimen/_3sdp"
            android:insetBottom="@dimen/_8sdp">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimaryDark" />
                <padding android:left="@dimen/_1sdp"
                    android:top="@dimen/_1sdp"
                    android:right="@dimen/_1sdp"
                    android:bottom="@dimen/_1sdp" />
            </shape>
        </inset>
    </item>


    <!-- normal state -->
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetLeft="@dimen/_3sdp"
            android:insetTop="@dimen/_8sdp"
            android:insetRight="@dimen/_3sdp"
            android:insetBottom="@dimen/_8sdp">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
                <padding android:left="@dimen/_1sdp"
                    android:top="@dimen/_1sdp"
                    android:right="@dimen/_1sdp"
                    android:bottom="@dimen/_1sdp" />
            </shape>
        </inset>
    </item>
</selector>