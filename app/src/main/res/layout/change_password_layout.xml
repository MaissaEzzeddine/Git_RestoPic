<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColorScreen"
    android:id="@+id/change_password_layout">

    <EditText
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/reset_password"
        android:background="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="@string/nouveau_mot_de_passe"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp" />


    <Button
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_36sdp"
        android:text="@string/continuer"
        android:id="@+id/continuer"
        android:textSize="@dimen/_10sdp"
        android:background="@drawable/custom_btn"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/reset_password"
        style="@style/com_facebook_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>