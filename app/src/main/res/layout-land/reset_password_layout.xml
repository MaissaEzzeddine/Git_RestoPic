<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/windowBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/email_reset"
        android:layout_marginTop="60dp"
        android:hint="Votre adresse email"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:text="@string/continuer"
        android:id="@+id/reset"
        android:background="@drawable/custom_btn"
        android:layout_centerHorizontal="true"
        style="@style/com_facebook_button"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/email_reset"
        android:layout_alignLeft="@+id/cancel"
        android:layout_alignStart="@+id/cancel" />

    <Button
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_36sdp"
        android:text="@string/annuler"
        android:background="@drawable/custom_btn"
        android:layout_centerHorizontal="true"
        style="@style/com_facebook_button"
        android:id="@+id/cancel"
        android:layout_below="@+id/reset" />

</RelativeLayout>